<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group row">
        <%= f.label :email , class:"col-sm-1 col-form-label font-weight-bold"%><br/>
        <div class="col-sm-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
    </div>

    <div class="field form-group row">
        <%= f.label :password , class:"col-sm-1 col-form-label font-weight-bold" %><br/>
        <div class="col-sm-2">
            <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
    </div>

    <% if devise_mapping.rememberable? %>
        <div class="field form-group ">
            <div class="col-sm-5">
                <%= f.check_box :remember_me, class:" col-sm-1"   %>
                <%= f.label :remember_me , class:" col-form-label font-weight-bold"%>
            </div>
        </div>
    <% end %>

    <div class="actions">
        <%= f.submit "Log in", class:"btn btn-primary" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
