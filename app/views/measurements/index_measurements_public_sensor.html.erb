<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-start">
    <h4 class="mr-5">Measurements of Sensor : #<%= @sensor.id %>  </h4>
    <h4 class="mr-5"> URI : <%= @sensor.URI %> </h4>
    <h4 class="mr-4">  Sensor type : <%= @sensor.sensor_type %> </h4>
</div>

<h3> <%= @label %> </h3>
<div class="container border border-secondary m-2 p-4">
    <%= line_chart @data %>
</div>

<div class="container-fluid ">
    <span class="d-flex justify-content-center">
        <%= link_to "24 hours", public_sensor_measurements_path(:format => "24_hours"), class: "form-inline my-2 my-lg-0 btn btn-primary  m-2" %>
        <%= link_to "1 week", public_sensor_measurements_path(:format => "1_week"), class: "form-inline my-2 my-lg-0 btn btn-primary  m-2" %>
        <%= link_to "1 month", public_sensor_measurements_path(:format => "1_month"), class: "form-inline my-2 my-lg-0 btn btn-primary  m-2" %>
    </span>
</div>

<table class="table table-striped table-bordered table-hover mt-3">
  <thead class="thead-dark">
    <tr>
      <th>Timestamp</th>
      <th>Value</th>
    </tr>
  </thead>

  <%if not @measurements.nil? %>

<tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.timestamp.in_time_zone("Paris") %></td>
        <td><%= measurement.value %></td>
<%#        <td><%= link_to 'Show', measurement %></td>
<%#        <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
<%#        <td><%= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

   <%else %>
        <h1> non data to show please login</h1>
   <%end %>
<br>
