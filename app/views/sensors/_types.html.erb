<%= form_tag('/sensors', method: 'get') do %>
    <% @types.each do |type| %>
        <div class="form-check">
            <%= check_box_tag('sensor_types[]',type,(@checked.include? type), class: "form-check-input") %>
            <%= label_tag(type, type, class: "form-check-label") %>
        </div>
    <% end %>
    <br>
    <%= submit_tag("Search", class: "btn btn-secondary") %>
<% end %>